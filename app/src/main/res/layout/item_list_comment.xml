<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_comment_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/button_margin"
    android:background="@color/layout_background_item"
    android:padding="@dimen/parent_layout_padding">
    <!--ua.ex.toseex.RoundedImageView-->
    <club.bobfilm.app.RoundedImageView
        android:id="@+id/civ_comment_avatar"
        android:layout_width="@dimen/comment_avatar_width"
        android:layout_height="@dimen/comment_avatar_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:layout_margin="@dimen/parent_layout_padding"
        android:contentDescription="poster"
        app:corner_radius="4dp"
        android:src="@drawable/default_avatar"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/tv_comment_create_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/c_text_item_default"
        android:paddingBottom="@dimen/parent_layout_padding"
        android:paddingLeft="@dimen/parent_layout_padding"
        android:paddingStart="@dimen/parent_layout_padding"
        android:paddingRight="@dimen/parent_layout_padding"
        android:paddingEnd="@dimen/parent_layout_padding"
        android:text="10.02.2012"
        android:textSize="@dimen/size_text_small"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/tv_comment_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_comment_title"
        android:layout_toEndOf="@id/civ_comment_avatar"
        android:layout_toRightOf="@id/civ_comment_avatar"
        android:ellipsize="end"
        android:paddingBottom="@dimen/parent_layout_padding"
        android:paddingLeft="@dimen/parent_layout_padding"
        android:paddingRight="@dimen/parent_layout_padding"
        android:text="Тело отзыва.."
        android:textSize="@dimen/size_text_normal"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/tv_comment_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:paddingBottom="@dimen/parent_layout_padding"
        android:paddingLeft="@dimen/parent_layout_padding"
        android:paddingStart="@dimen/parent_layout_padding"
        android:paddingRight="@dimen/parent_layout_padding"
        android:paddingEnd="@dimen/parent_layout_padding"
        android:text="title"
        android:textSize="@dimen/size_text_normal"
        android:textStyle="bold"
        android:textColor="@color/c_link_text"
        tools:ignore="HardcodedText"
        android:clickable="true"
        android:background="?android:attr/selectableItemBackground"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/civ_comment_avatar"
        android:layout_toEndOf="@+id/civ_comment_avatar"
        android:layout_toLeftOf="@+id/tv_comment_user"
        android:layout_toStartOf="@+id/tv_comment_user"/>

    <TextView
        android:id="@+id/tv_comment_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingBottom="@dimen/parent_layout_padding"
        android:paddingLeft="@dimen/parent_layout_padding"
        android:paddingStart="@dimen/parent_layout_padding"
        android:paddingRight="@dimen/parent_layout_padding"
        android:paddingEnd="@dimen/parent_layout_padding"
        android:text="username"
        android:textSize="@dimen/size_text_small"
        android:textStyle="bold"
        android:textColor="@color/c_link_text"
        tools:ignore="HardcodedText"
        android:clickable="true"
        android:background="?android:attr/selectableItemBackground"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/tv_comment_create_date"
        android:layout_toStartOf="@+id/tv_comment_create_date" />

</RelativeLayout>
