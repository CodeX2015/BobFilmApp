<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialog_rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/contentDialog"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:padding="20dp"
        android:background="@drawable/rnd_corners_gray_bg_white"
        android:gravity="start|center_vertical"
        tools:ignore="UselessParent">

        <club.bobfilm.app.ProgressBarCircularIndeterminate
            android:id="@+id/progressBarCircularIndetermininate"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/progress_bar_active" />

        <TextView
            android:id="@+id/progress_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="40dp"
            android:text="Title"
            android:textColor="@color/text_color_dark"
            android:textSize="@dimen/size_text_normal"
            tools:ignore="HardcodedText,RtlHardcoded" />
    </LinearLayout>

</LinearLayout>