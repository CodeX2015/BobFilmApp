<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android">
    <scale xmlns:android="http://schemas.android.com/apk/res/android"
        android:duration="20"
        android:fromXScale="1.01"
        android:fromYScale="1.01"
        android:pivotX="50%"
        android:pivotY="50%"
        android:toXScale="0.99"
        android:toYScale="0.99" />

    <scale xmlns:android="http://schemas.android.com/apk/res/android"
        android:duration="20"
        android:fromXScale="0.99"
        android:fromYScale="0.99"
        android:pivotX="50%"
        android:pivotY="50%"
        android:toXScale="1.01"
        android:toYScale="1.01" />

    <alpha xmlns:android="http://schemas.android.com/apk/res/android"
        android:duration="20"
        android:fromAlpha="1"
        android:interpolator="@android:anim/accelerate_interpolator"
        android:toAlpha="0.8" />

    <alpha xmlns:android="http://schemas.android.com/apk/res/android"
        android:duration="50"
        android:fromAlpha="0.8"
        android:interpolator="@android:anim/accelerate_interpolator"
        android:toAlpha="1" />
</set>